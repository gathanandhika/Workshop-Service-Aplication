<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="15dp"
    tools:context=".InformasiActivity">

    <TextView
        android:id="@+id/text_header_primcars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="630dp"
        android:fontFamily="@font/akira_expanded_demo"
        android:text="PRIMCARS"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_header_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/akira_expanded_demo"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="-7dp"
        android:layout_marginLeft="320dp"
        android:background="@drawable/logoputih" />

    <TextView
        android:id="@+id/nama_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif-medium"
        android:text="Nama"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/nama_edit"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="165dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/edittext_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <TextView
        android:id="@+id/email_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="230dp"
        android:fontFamily="sans-serif-medium"
        android:text="Email"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="255dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <TextView
    android:id="@+id/password_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="320dp"
    android:fontFamily="sans-serif-medium"
    android:text="Password"
    android:textColor="#ffffff"
    android:textSize="18dp" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="345dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/edittext_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <TextView
        android:id="@+id/nohape_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="420dp"
        android:fontFamily="sans-serif-medium"
        android:text="Nomor Handphone"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/nohape_edit"
        android:layout_width="360dp"
        android:layout_height="37dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="445dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/edittext_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif-black"
        android:text="Register"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>